@model N7.Models.AppCollection
@{
    ViewBag.Title = SharedLocalizer["Delete Collection"];
}


<div>

    <h3>@SharedLocalizer["Delete Collection"]?</h3>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Details</dt>
        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteCollection" asp-route-id="@Model.Id"
              method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="OK" />
            </div>
        </form>
    </div>
</div>
